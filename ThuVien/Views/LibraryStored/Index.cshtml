@model ThuVien.ViewModels.Step1Model
@{
    ViewBag.Title = "Dự trữ tài liệu";
}
<head>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
        $(function () {
            $(".test").datepicker({ dateFormat: "dd/mm/yy" });
        });
    </script>
</head>

<div class="row">
        
    
        @using (Html.BeginForm("Index", "LibraryStored", FormMethod.Post))
        {
            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" }) 
            <br />

            <h2>THÔNG TIN GIẢNG VIÊN</h2>
            <div class="row">
                <div class="col-md-2">
                    @Html.DisplayNameFor(model => model.HoTen)
                </div>

                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.HoTen)
                </div>
                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })

                <br />
                <br />

                <div class="col-md-2">
                    @Html.DisplayNameFor(model => model.SoThe)
                </div>

                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.SoThe)
                </div>
                @Html.ValidationMessageFor(model => model.SoThe, "", new { @class = "text-danger" })

                <br />
                <br />

                <div class="col-md-2">
                    @Html.DisplayNameFor(model => model.Khoa)
                </div>

                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Khoa)
                </div>
                @Html.ValidationMessageFor(model => model.Khoa, "", new { @class = "text-danger" })

                <br />
                <br />

                <div class="col-md-2">
                    @Html.DisplayNameFor(model => model.DienThoai)
                </div>

                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.DienThoai)
                </div>
                @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })

                <br />
                <br />
            </div>

            <div class="row">
                <h2>THÔNG TIN MÔN HỌC</h2>
                <div class="col-md-2">
                    @Html.DisplayNameFor(model => model.CourseID)
                </div>

                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.CourseID)
                </div>
                @Html.ValidationMessageFor(model => model.CourseID, "", new { @class = "text-danger" })

                <br />
                <br />

                <div class="col-md-2">
                    @Html.DisplayNameFor(model => model.TenMon)
                </div>

                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.TenMon)
                </div>
                @Html.ValidationMessageFor(model => model.TenMon, "", new { @class = "text-danger" })

                <br />
                <br />

                <div class="col-md-2">
                    @Html.DisplayNameFor(model => model.Nganh)
                </div>

                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Nganh)
                </div>
                @Html.ValidationMessageFor(model => model.Nganh, "", new { @class = "text-danger" })

                <br />
                <br />

                <div class="col-md-2">
                    @Html.DisplayNameFor(model => model.Nhom)
                </div>

                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Nhom)
                </div>
                @Html.ValidationMessageFor(model => model.Nhom, "", new { @class = "text-danger", @type = "number" })

                <br />
                <br />

                <div class="col-md-2">
                    @Html.DisplayNameFor(model => model.HK)
                </div>

                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.HK, (IEnumerable<SelectListItem>)ViewBag.HK, "--Vui lòng chọn--", new { @class = "selectionType", onchange = "SelectType()" })
                </div>
                @Html.ValidationMessageFor(model => model.HK, "", new { @class = "text-danger" })

                <br />
                <br />

                <div class="col-md-2">
                    @Html.DisplayNameFor(model => model.DuTruFrom)
                </div>

                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.DuTruFrom, "{0:dd/MM/yyyy}", new { @class = "test" })
                </div>
                @Html.ValidationMessageFor(model => model.DuTruFrom, "", new { @class = "text-danger" })

                <br />
                <br />

                <div class="col-md-2">
                    @Html.DisplayNameFor(model => model.DuTruTo)
                </div>

                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.DuTruTo, "{0:dd/MM/yyyy}", new { @class = "test" })
                </div>
                @Html.ValidationMessageFor(model => model.DuTruTo, "", new { @class = "text-danger" })

                <br />
                <br />
                <div class="col-md-2">
                    @Html.DisplayNameFor(model => model.SoLuongSV)
                </div>

                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.SoLuongSV)
                </div>

                <br />
                <br />
                <input type="submit" value="Tiếp Tục" />
            </div>
        }
            
</div>

